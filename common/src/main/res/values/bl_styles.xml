<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--用于配置 com.noober.background:core:1.6.0-->
    <!--注意1. style中不要加入"app:", 直接写属性名即可-->
    <!--注意2. 属性会和 Background 冲突-->


    <!--添加背景圆角-->
    <style name="bl_radius_fff_10">
        <item name="bl_corners_radius">@dimen/pt_10</item>
        <item name="bl_solid_color">@color/color_fff</item>
        <item name="bl_stroke_color">@color/color_fff</item>
        <item name="bl_stroke_width">@dimen/pt_0</item>
    </style>

    <style name="bl_radius_10">
        <item name="bl_corners_radius">@dimen/pt_10</item>
        <item name="bl_solid_color">@color/color_ff6699</item>
        <item name="bl_stroke_color">@color/color_fff</item>
        <item name="bl_stroke_width">@dimen/pt_0</item>
    </style>


    <!--点赞样式  1-->
    <style name="bl_button_like_left">
        <item name="bl_position">left</item>
        <item name="bl_selected_drawable">@mipmap/common_icon_like</item>
        <item name="bl_selected_textColor">@color/color_ff6699</item>
        <item name="bl_unSelected_drawable">@mipmap/common_icon_unlike</item>
        <item name="bl_unSelected_textColor">@color/color_999</item>
    </style>

    <!--点赞样式 2-->
    <style name="bl_button_like_pressed_right">
        <item name="bl_position">right</item>
        <item name="bl_pressed_drawable">@mipmap/common_icon_like</item>
        <item name="bl_pressed_textColor">@color/color_ff6699</item>
        <item name="bl_unPressed_textColor">@color/color_999</item>
        <item name="bl_unPressed_drawable">@mipmap/common_icon_unlike</item>
    </style>


    <!--渐变样式-->
    <style name="bl_gradient">
        <item name="bl_position">right</item>
        <item name="bl_gradient_angle">0</item>
        <item name="bl_gradient_endColor">@color/color_00aaae</item>
        <item name="bl_gradient_startColor">@color/color_d81b60</item>
    </style>

    <!--事件(关闭)-->
    <style name="bl_function_event" parent="bl_radius_10">
        <item name="bl_function">function</item>
    </style>


    <!--TextView pressed-->
    <style name="bl_tv_pressed">
        <item name="bl_pressed_textColor">@color/color_ff6699</item>
        <item name="bl_unPressed_textColor">@color/color_999</item>
    </style>

</resources>