<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ExpandTextView-->
    <declare-styleable name="ExpandTextView">
        <!--内容文本颜色-->
        <attr name="contentTextColor" format="reference|color" />
        <!--内容文本字体大小-->
        <attr name="contentTextSize" format="dimension" />
        <!--按钮文本颜色-->
        <attr name="btnTextColor" format="reference|color" />
        <!--按钮折叠的描述-->
        <attr name="btnExpandText" format="string" />
        <!--按钮展开的描述-->
        <attr name="btnSpreadText" format="string" />
        <!--按钮字体大小-->
        <attr name="btnTextSize" format="dimension" />
        <!--最大显示行数-->
        <attr name="showLines" format="integer" />
        <!--是否显示箭头图标-->
        <attr name="showIcon" format="boolean" />
        <!--箭头资源-->
        <attr name="iconRes" format="reference" />
        <!--动画时长-->
        <attr name="animationDuration" format="integer" />
        <!--@或者#话题#是否自定义点击事件-->
        <attr name="spanClickable" format="boolean" />
        <!--是否可折叠-->
        <attr name="expandEnable" format="boolean" />
    </declare-styleable>

    <!--CustomTabView-->
    <declare-styleable name="CustomTabView">
        <!--文本-->
        <attr name="ctvText" format="string" />
        <!--字体大小-->
        <attr name="ctvTextSize" format="dimension" />
        <!--未选中字体颜色-->
        <attr name="ctvTextOriginColor" format="color" />
        <!--选中字体颜色-->
        <attr name="ctvTextChangeColor" format="color" />
        <!--字体渐变-->
        <attr name="ctvProgress" format="float" />
        <!--字体渐变方向-->
        <attr name="ctvDirection" format="integer" />
    </declare-styleable>

    <!--跑马灯效果文本控件-->
    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference" />
        <attr name="mvAnimDuration" format="integer|reference" />
        <attr name="mvTextSize" format="dimension|reference" />
        <attr name="mvTextColor" format="color|reference" />
        <attr name="mvSingleLine" format="boolean" />
        <attr name="mvGravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
</resources>