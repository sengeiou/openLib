<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_album"
            android:layout_width="@dimen/pt_300"
            android:layout_height="@dimen/pt_150"
            android:layout_marginTop="@dimen/pt_150"
            android:gravity="center"
            android:text="相册"
            android:textSize="@dimen/pt_42"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_contacts"
            android:layout_width="@dimen/pt_300"
            android:layout_height="@dimen/pt_150"
            android:layout_marginTop="@dimen/pt_150"
            android:gravity="center"
            android:text="获取通讯录"
            android:textSize="@dimen/pt_42"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_album" />


        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pt_50"
            android:layout_marginTop="@dimen/pt_150"
            android:layout_marginEnd="@dimen/pt_50"
            android:gravity="center"
            android:text="desc"
            android:textColor="@color/color_333"
            android:textSize="@dimen/pt_42"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_contacts" />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pt_150"
            android:layout_marginEnd="@dimen/pt_150"
            android:minHeight="@dimen/pt_300"
            android:text="name"
            android:textColor="@color/color_333"
            android:textSize="@dimen/pt_42"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pt_40"
            android:text="编辑"
            android:textColor="@color/color_333"
            android:textSize="@dimen/pt_42"
            app:layout_constraintEnd_toEndOf="@+id/et_name"
            app:layout_constraintStart_toStartOf="@+id/et_name"
            app:layout_constraintTop_toBottomOf="@+id/et_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>